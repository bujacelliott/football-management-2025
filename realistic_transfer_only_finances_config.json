  "meta": {
    "name": "RealisticTransferOnlyFinances",
    "version": "1.0.0",
    "created_utc": "2026-01-05T19:41:42Z",
    "currency": "GBP",
    "assumptions": [
      "All income earned is added to transfer budget (no wages system).",
      "Match income is modeled as guaranteed league revenue + small result bonuses.",
      "Bigger clubs earn more per match via a market-size multiplier derived from club budget vs league median."
    ]
  },
  "engine": {
    "match_income_model": {
      "type": "guaranteed_plus_result_bonus",
      "formula": "match_income = guaranteed_fee * market_multiplier + result_bonus",
      "result_bonus": {
        "win": "win_bonus",
        "draw": "draw_bonus",
        "loss": 0
      },
      "market_multiplier": {
        "type": "sqrt_budget_over_league_median",
        "input_budget_field": "transfer_budget",
        "league_median_source": "median_of_all_club_transfer_budgets_in_league_at_season_start",
        "clamp_min": 0.75,
        "clamp_max": 1.6,
        "formula": "market_multiplier = clamp(min, max, sqrt(club_budget / league_median_budget))"
      }
    },
    "season_budget_update": {
      "type": "carryover_of_earnings_to_next_season_budget",
      "carryover_rate": 1.0,
      "formula": "next_season_transfer_budget = base_budget_next_season + carryover_rate * season_earnings",
      "notes": "Set carryover_rate < 1.0 if you want to slow inflation (e.g., 0.8)."
    }
  },
